{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node"]
  },
  "include": [
    "src",
    "eslint.config.js",
    "jest.config.js",
    "vite.config.ts",
    "test/**/*.js"
    // "./tsconfig.app.json",
    // "./tsconfig.node.json"
  ]
}
